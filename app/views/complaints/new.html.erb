<%= render 'partials/header' %>


<%=form_for :complaint, { :url => complaints_path, :class => "form-group", remote: true }  do |f|%>
    <div class="col-md-6 col-md-offset-3" >
      <h2>Raise an Issue</h2>
      <%= f.text_field :title, class: "form-control", placeholder: "Your issue" %>
      <%= f.text_area :text, class: "form-control", placeholder: "Describe your issue" %>
      <div style="display:inline">
        <%= f.check_box :active %>
        <%= f.label :report_to_condo_management %><br>
      </div>
      <%= f.submit %>
    </div>
  <% end %>
